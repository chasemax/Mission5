<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - The Joel Hilton Film Collection</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">The JH Film Collection</a>
        <div class="navbar-nav">
            <a class="nav-link navbar-item" asp-controller="Home" asp-action="Index">Home</a>
            <a class="nav-link navbar-item" asp-controller="Home" asp-action="Podcasts">Podcasts</a>
            <a class="nav-link navbar-item" asp-controller="Home" asp-action="Movie">Movies</a>
        </div>
    </nav>
    @RenderBody()
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
