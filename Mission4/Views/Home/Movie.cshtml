@{ 
    ViewData["Title"] = "New Movie";
}

@model Mission4.Models.Movie

<h1>Add / Edit a Movie</h1>

<form method="post">
    <label asp-for="Category">Category:</label>
    <select asp-for="CategoryId">
        @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
    </select>
    <span asp-validation-for="Category" class="text-danger"></span>
    <br />

    <label asp-for="Title">Title:</label>
    <input asp-for="Title" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />

    <label asp-for="Year">Year:</label>
    <input asp-for="Year" />
    <span asp-validation-for="Year" class="text-danger"></span>
    <br />

    <label asp-for="Director">Director: </label>
    <input asp-for="Director" />
    <span asp-validation-for="Director" class="text-danger"></span>
    <br />

    <label asp-for="Rating">Rating: </label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
        <option value="UR">UR</option>
    </select>
    <span asp-validation-for="Rating" class="text-danger"></span>
    <br />

    <label asp-for="Edited">Edited?</label>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <span asp-validation-for="Edited" class="text-danger"></span>
    <br />

    <label asp-for="LentTo">Lent To:</label>
    <input asp-for="LentTo" />
    <span asp-validation-for="LentTo" class="text-danger"></span>
    <br />

    <label asp-for="Notes">Notes:</label>
    <input asp-for="Notes" />
    <span asp-validation-for="Notes" class="text-danger"></span>
    <br />

    <button type="submit">Save</button>
</form>